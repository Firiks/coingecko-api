{
    "version": "1.0.0",
    "name": "firiks/coingecko-api",
    "type": "library",
    "description": "PHP REST API client for coingecko.com",
    "homepage": "https://github.com/Firiks/coingecko-api",
    "keywords": ["client", "api", "php", "coingecko.com", "rest"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/Firiks/coingecko-api/issues?state=open",
        "source": "https://github.com/Firiks/coingecko-api"
    },
    "authors": [
        {
            "name": "Firiks"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": { "Firiks\\CoinGeckoApi\\": "src/" }
    },
    "scripts": {
        "post-update-cmd": "composer dump-autoload -o"
    },
    "autoload-dev": {
        "psr-4": { "Firiks\\CoinGeckoApi\\Tests\\": "tests/"}
    },
    "prefer-stable": true
}
